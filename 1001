#include <iostream>

using namespace std;

int main()
{
    int n;
    int time = 0;
    cin>>n;


    while(n != 1)
    {
        if(n % 2 == 0)
        {
            n /= 2;
        }
        else
        {
            n = (3 * n + 1) / 2;
        }
        time++;
    }
    cout<<time<<endl;
    return 0;
}
